<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingTop="20dp"
    tools:context=".DataUpdate">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/NID"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/input"
            android:hint="NID"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textColor="#0E0D0D"
            android:textColorHint="#322525"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/Name"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input"
            android:hint="Name"
            android:paddingLeft="20dp"
            android:textColor="#0E0D0D"
            android:textColorHint="#1C1B1B"
            app:layout_constraintBottom_toTopOf="@+id/Age"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NID"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/Age"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="92dp"
            android:background="@drawable/input"
            android:hint="Age"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textColor="#0C0B0B"
            android:textColorHint="#232121"
            app:layout_constraintBottom_toBottomOf="@+id/Weight"
            app:layout_constraintEnd_toStartOf="@+id/Weight"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <EditText
            android:id="@+id/Weight"
            android:layout_width="152dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="53dp"
            android:background="@drawable/input"
            android:ems="10"
            android:hint="Weight"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textColor="#131010"
            android:textColorHint="#1E1C1C"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Age"
            app:layout_constraintTop_toBottomOf="@+id/Name" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="119dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"

            android:layout_marginEnd="32dp"
            android:background="#97D7DF"
            android:backgroundTint="#97D7DF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/updateBtn"
            android:layout_width="339dp"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="68dp"
            android:backgroundTint="@color/teal_700"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:text="Get Started"
            android:textColor="@color/white"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="79dp"
            android:layout_height="46dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="24dp"

            android:hint="Gender"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="#171414"
            android:textColorHint="#252121"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/Name"
            app:layout_constraintEnd_toStartOf="@+id/spinner"
            app:layout_constraintStart_toEndOf="@+id/NID"
            app:layout_constraintTop_toTopOf="@+id/NID" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="57dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="18dp"
            android:hint="feet"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:textColor="#120F0F"
            android:textColorHint="#272626"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/updateBtn"
            app:layout_constraintEnd_toStartOf="@+id/feet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.333" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="57dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="16dp"
            android:hint="inch"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:textColor="#0C0A0A"
            android:textColorHint="#252323"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/updateBtn"
            app:layout_constraintEnd_toStartOf="@+id/inch"
            app:layout_constraintStart_toEndOf="@+id/feet"
            app:layout_constraintTop_toBottomOf="@+id/Weight"
            app:layout_constraintVertical_bias="1.0" />

        <Spinner
            android:id="@+id/feet"
            android:layout_width="88dp"
            android:layout_height="39dp"

            android:layout_marginTop="13dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="18dp"
            android:background="#97D7DF"
            android:dropDownWidth="80dp"
            android:dropDownHeight="100dp"
            app:layout_constraintBottom_toTopOf="@+id/updateBtn"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.444" />

        <Spinner
            android:id="@+id/inch"
            android:layout_width="84dp"
            android:layout_height="40dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="24dp"
            android:background="#97D7DF"
            app:layout_constraintBottom_toTopOf="@+id/updateBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.183"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/Weight"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="115dp"
            android:layout_height="27dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:hint="Height"
            android:paddingLeft="10dp"
            android:textColor="#191717"
            android:textColorHint="#272626"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/Weight"
            app:layout_constraintHorizontal_bias="0.018"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Age" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="408dp"
            android:layout_height="322dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/NID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/applogo" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>





