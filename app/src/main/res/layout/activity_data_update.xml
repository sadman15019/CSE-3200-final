<?xml version="1.0" encoding="utf-8"?>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".DataUpdate">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="UPDATE DATA"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.472"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/NID"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input"
            android:hint="NID"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textColor="#0E0D0D"
            android:textColorHint="#322525"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/Name"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/input"
            android:hint="Name"
            android:paddingLeft="20dp"
            android:textColor="#0E0D0D"
            android:textColorHint="#1C1B1B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NID" />


        <EditText
            android:id="@+id/Age"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/input"
            android:hint="Age"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textColor="#0C0B0B"
            android:textColorHint="#232121"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <EditText
            android:id="@+id/Weight"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/input"
            android:ems="10"
            android:hint="Weight"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textColor="#131010"
            android:textColorHint="#1E1C1C"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feet" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="142dp"
            android:layout_height="49dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"

            android:background="#ffefed"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/Name" />

        <Button
            android:id="@+id/updateBtn"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="Update Data"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.313"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Weight" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="103dp"
            android:layout_height="52dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:hint="Gender"
            android:paddingLeft="10dp"

            android:paddingTop="10dp"
            android:textColor="#171414"
            android:textColorHint="#252121"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Name" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="57dp"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:hint="feet"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:textColor="#120F0F"
            android:textColorHint="#272626"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="57dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:hint="inch"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:textColor="#0C0A0A"
            android:textColorHint="#252323"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/feet"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <Spinner
            android:id="@+id/feet"
            android:layout_width="80dp"
            android:layout_height="39dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"

            android:dropDownWidth="80dp"
            android:dropDownHeight="100dp"
            android:background="#ffefed"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <Spinner
            android:id="@+id/inch"
            android:layout_width="99dp"
            android:layout_height="37dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#ffefed"
            app:layout_constraintHorizontal_bias="0.689"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="354dp"
            android:layout_height="60dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:hint="Height"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:textColor="#191717"
            android:textColorHint="#272626"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Age" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>





